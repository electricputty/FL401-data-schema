{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "CCD Create FL401 Case: Version 0.9",
    "type": "object",
    "$defs": {
        "applicantAgeBracket": {
            "type": "string",
            "enum": [
                "eighteenOrOlder",
                "sixteenToEighteen",
                "underSixteen"
            ]
        },
        "applicationCover": {
            "type": "string",
            "enum": [
                "applicantOnly",
                "applicantAndChildren"
            ]
        },
        "behaviourTowardsApplicant": {
            "type": "string",
            "enum": [
                "beingViolentOrThreatening",
                "harrasingOrIntimidating",
                "publishingAboutApplicant",
                "contactingApplicant",
                "damagingPossessions",
                "damagingHome",
                "enteringHome",
                "comingNearHome",
                "comingNearWork"
            ]
        },
        "behaviourTowardsChildren": {
            "type": "string",
            "enum": [
                "beingViolentOrThreatening",
                "harrasingOrIntimidating",
                "publishingAboutChildren",
                "contactingDirectly",
                "goingNearSchoolNursery"
            ]
        },
        "childAtAddress": {
            "type": "object",
            "properties": {
                "fullName": {
                    "type": "string"
                },
                "age": {
                    "type": "integer"
                }
            },
            "required": [
                "fullName",
                "age"
            ],
            "additionalProperties": false
        },
        "contractName": {
            "type": "string",
            "enum": [
                "applicant",
                "respondent",
                "other"
            ]
        },
        "courtProceeding": {
            "type": "object",
            "properties": {
                "nameOfCourt": {
                    "type": "string"
                },
                "caseNumber": {
                    "type": "string"
                },
                "caseType": {
                    "type": "string"
                },
                "caseDetails": {
                    "type": "string"
                }
            },
            "required": [
                "nameOfCourt",
                "caseNumber",
                "caseType"
            ],
            "additionalProperties": false
        },
        "familyHomeOutcome": {
            "type": "string",
            "enum": [
                "respondentToPayRepairsMaintenance",
                "respondentToPayRentMortgage",
                "useOfFurnitureOrContents"
            ]
        },
        "gender": {
            "type": "string",
            "enum": [
                "male",
                "female",
                "other"
            ]
        },
        "livingSituationOutcome": {
            "type": "string",
            "enum": [
                "stayInHome",
                "returnToHome",
                "respondentNotEnterHome",
                "respondentAwayFromSurroundingArea",
                "respondentLimitInHome"
            ]
        },
        "orderType": {
            "type": "string",
            "enum": [
                "nonMolestationOrder",
                "occupationOrder"
            ]
        },
        "preferredContact": {
            "type": "string",
            "enum": [
                "phone",
                "email"
            ]
        },
        "previousOrIntendedResidentAtAddress": {
            "type": "string",
            "enum": [
                "applicantAndRespondent",
                "applicant",
                "respondent",
                "neither"
            ]
        },
        "protectedChild": {
            "type": "object",
            "properties": {
                "fullName": {
                    "type": "string"
                },
                "dateOfBirth": {
                    "$ref": "#/$defs/standardDate"
                },
                "relationship": {
                    "type": "string"
                },
                "parentalResponsibility": {
                    "type": "boolean"
                },
                "respondentRelationship": {
                    "type": "string"
                }
            },
            "required": [
                "fullName",
                "dateOfBirth",
                "relationship",
                "parentalResponsibility",
                "respondentRelationship"
            ],
            "additionalProperties": false
        },
        "relationshipDescription": {
            "type": "string",
            "enum": [
                "marriedOrCivil",
                "formerlyMarriedOrCivil",
                "engagedOrProposed",
                "formerlyEngagedOrProposed",
                "liveTogetherCouple",
                "formerlyLiveTogetherCouple",
                "currentNotLiveTogether",
                "formerNotLiveTogether",
                "noneOfAbove"
            ]
        },
        "relationshipType": {
            "type": "string",
            "enum": [
                "father",
                "mother",
                "son",
                "daughter",
                "brother",
                "sister",
                "grandfather",
                "grandmother",
                "uncle",
                "aunt",
                "nephew",
                "niece",
                "cousin",
                "other"
            ]
        },
        "residentAtAddress": {
            "type": "string",
            "enum": [
                "applicant",
                "respondent",
                "children",
                "other"
            ]
        },
        "specialMeasures": {
            "type": "string",
            "enum": [
                "separateWaitingRoom",
                "seperateEntranceExit",
                "shieldedByScreen",
                "joinByVideoLink"
            ]
        },
        "standardDate": {
            "type": "object",
            "properties": {
                "day": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 31
                },
                "month": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 12
                },
                "year": {
                    "type": "number"
                }
            },
            "required": [
                "day",
                "month",
                "year"
            ],
            "additionalProperties": false
        },
        "ukAddress": {
            "type": "object",
            "properties": {
                "addressLine1": {
                    "type": "string"
                },
                "addressLine2": {
                    "type": "string"
                },
                "addressLine3": {
                    "type": "string"
                },
                "postTown": {
                    "type": "string"
                },
                "postCode": {
                    "type": "string"
                },
                "county": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                }
            },
            "required": [
                "addressLine1",
                "postTown",
                "postCode"
            ],
            "additionalProperties": false
        },
        "withoutNoticeReason": {
            "type": "string",
            "enum": [
                "riskOfSignificantHarm",
                "deterredFromPursuingApplication",
                "respondentDeliberatelyEvadingService"
            ]
        },
        "consentTypes": {
            "type": "string",
            "enum": [
                "applicantConfirm",
                "legalAidConfirm"
            ]
        }
    },
    "properties": {
        "metaData": {
            "type": "object",
            "properties": {
                "caseOrigin": {
                    "type": "string"
                },
                "courtNavApproved": {
                    "type": "boolean"
                },
                "hasDraftOrder": {
                    "type": "boolean"
                },
                "numberOfAttachments": {
                    "type": "integer"
                }
            },
            "required": [
                "caseOrigin",
                "courtNavApproved",
                "hasDraftOrder",
                "numberOfAttachments"
            ],
            "additionalProperties": false
        },
        "fl401": {
            "type": "object",
            "properties": {
                "beforeStart": {
                    "type": "object",
                    "properties": {
                        "applicantHowOld": {
                            "$ref": "#/$defs/applicantAgeBracket"
                        }
                    },
                    "required": [
                        "applicantHowOld"
                    ],
                    "additionalProperties": false
                },
                "situation": {
                    "type": "object",
                    "properties": {
                        "ordersAppliedFor": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "$ref": "#/$defs/orderType"
                            }
                        },
                        "ordersAppliedWithoutNotice": {
                            "type": "boolean"
                        },
                        "ordersAppliedWithoutNoticeReason": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "$ref": "#/$defs/withoutNoticeReason"
                            }
                        },
                        "ordersAppliedWithoutNoticeReasonDetails": {
                            "type": "string"
                        },
                        "bailConditionsOnRespondent": {
                            "type": "boolean"
                        },
                        "bailConditionsEndDate": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "additionalDetailsForCourt": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "ordersAppliedFor",
                        "ordersAppliedWithoutNotice",
                        "bailConditionsOnRespondent"
                    ],
                    "additionalProperties": false,
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "ordersAppliedWithoutNotice": { "const": true }
                                },
                                "required": [ "ordersAppliedWithoutNotice" ]
                            },
                            "then": {
                                "required": [ "ordersAppliedWithoutNoticeReason" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "ordersAppliedWithoutNotice": { "const": true }
                                },
                                "required": [ "ordersAppliedWithoutNotice" ]
                            },
                            "then": {
                                "required": [ "ordersAppliedWithoutNoticeReasonDetails" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "bailConditionsOnRespondent": { "const": true }
                                },
                                "required": [ "bailConditionsOnRespondent" ]
                            },
                            "then": {
                                "required": [ "bailConditionsEndDate" ]
                            }
                        }
                    ]
                },
                "applicantDetails": {
                    "type": "object",
                    "properties": {
                        "applicantFirstName": {
                            "type": "string"
                        },
                        "applicantLastName": {
                            "type": "string"
                        },
                        "applicantOtherNames": {
                            "type": "string"
                        },
                        "applicantGender": {
                            "$ref": "#/$defs/gender"
                        },
                        "applicantGenderOther": {
                            "type": "string"
                        },
                        "applicantDateOfBirth": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "shareContactDetailsWithRespondent": {
                            "type": "boolean"
                        },
                        "applicantAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "applicantPhoneNumber": {
                            "type": "string"
                        },
                        "applicantEmailAddress": {
                            "type": "string",
                            "format": "email"
                        },
                        "applicantPreferredContact": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "$ref": "#/$defs/preferredContact"
                            }
                        },
                        "applicantContactInstructions": {
                            "type": "string"
                        },
                        "applicantHasLegalRepresentative": {
                            "type": "boolean"
                        },
                        "legalRepresentativeFirstName": {
                            "type": "string"
                        },
                        "legalRepresentativeLastName": {
                            "type": "string"
                        },
                        "legalRepresentativeFirm": {
                            "type": "string"
                        },
                        "legalRepresentativeAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "legalRepresentativeDx": {
                            "type": "string"
                        },
                        "legalRepresentativePhone": {
                            "type": "string"
                        },
                        "legalRepresentativeEmail": {
                            "type": "string",
                            "format": "email"
                        },
                        "legalRepresentativeReference": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "applicantFirstName",
                        "applicantLastName",
                        "applicantGender",
                        "applicantDateOfBirth",
                        "shareContactDetailsWithRespondent",
                        "applicantAddress",
                        "applicantEmailAddress",
                        "applicantPreferredContact",
                        "applicantHasLegalRepresentative"
                    ],
                    "if": {
                        "properties": {
                            "applicantGender": { "const": "other" }
                        },
                        "required": [ "applicantGender" ]
                    },
                    "then": {
                        "required": [ "applicantGenderOther" ]
                    },
                    "additionalProperties": false
                },
                "respondentDetails": {
                    "type": "object",
                    "properties": {
                        "respondentFirstName": {
                            "type": "string"
                        },
                        "respondentLastName": {
                            "type": "string"
                        },
                        "respondentOtherNames": {
                            "type": "string"
                        },
                        "respondentDateOfBirth": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "respondentLivesWithApplicant": {
                            "type": "boolean"
                        },
                        "respondentAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "respondentPhoneNumber": {
                            "type": "string"
                        },
                        "respondentEmailAddress": {
                            "type": "string",
                            "format": "email"
                        }
                    },
                    "required": [
                        "respondentFirstName",
                        "respondentLastName",
                        "respondentLivesWithApplicant",
                        "respondentAddress"
                    ],
                    "additionalProperties": false
                },
                "relationshipWithRespondent": {
                    "type": "object",
                    "properties": {
                        "relationshipDescription": {
                            "$ref": "#/$defs/relationshipDescription"
                        },
                        "relationshipStartDate": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "relationshipEndDate": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "ceremonyDate": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "respondentsRelationshipToApplicant": {
                            "$ref": "#/$defs/relationshipType"
                        },
                        "respondentsRelationshipToApplicantOther": {
                            "type": "string"
                        },
                        "anyChildren": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "relationshipDescription",
                        "anyChildren"
                    ],
                    "allOf": [
                        {
                            "if": {
                                "not": {
                                    "properties": {
                                        "relationshipDescription": { "const": "noneOfAbove" }
                                    },
                                    "required": ["relationshipDescription"]
                                }
                            },
                            "then": {
                                "required": ["relationshipStartDate"]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "relationshipDescription": { "const": "noneOfAbove" }
                                },
                                "required": [ "relationshipDescription" ]
                            },
                            "then": {
                                "required": [ "respondentsRelationshipToApplicant" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "respondentsRelationshipToApplicant": { "const": "other" }
                                },
                                "required": [ "respondentsRelationshipToApplicant" ]
                            },
                            "then": {
                                "required": [ "respondentsRelationshipToApplicantOther" ]
                            }
                        }
                    ],
                    "additionalProperties": false
                },
                "family": {
                    "type": "object",
                    "properties": {
                        "whoApplicationIsFor": {
                            "$ref": "#/$defs/applicationCover"
                        },
                        "protectedChildren": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/protectedChild"
                            }
                        },
                        "anyOngoingCourtProceedings": {
                            "type": "boolean"
                        },
                        "ongoingCourtProceedings": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/courtProceeding"
                            }
                        }
                    },
                    "required": [
                        "whoApplicationIsFor",
                        "anyOngoingCourtProceedings"
                    ],
                    "additionalProperties": false,
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "whoApplicationIsFor": { "const": "applicantAndChildren" }
                                },
                                "required": [ "whoApplicationIsFor" ]
                            },
                            "then": {
                                "required": [ "protectedChildren" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "anyOngoingCourtProceedings": { "const": true }
                                },
                                "required": [ "anyOngoingCourtProceedings" ]
                            },
                            "then": {
                                "required": [ "ongoingCourtProceedings" ]
                            }
                        }
                    ]
                },
                "respondentBehaviour": {
                    "type": "object",
                    "properties": {
                        "applyingForMonMolestationOrder": {
                            "type": "boolean"
                        },
                        "stopBehaviourTowardsApplicant": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/behaviourTowardsApplicant"
                            }
                        },
                        "stopBehaviourTowardsChildren": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/behaviourTowardsChildren"
                            }
                        },
                        "stopBehaviourAnythingElse": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "applyingForMonMolestationOrder"
                    ],
                    "additionalProperties": false,
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "applyingForMonMolestationOrder": { "const": true }
                                },
                                "required": [ "applyingForMonMolestationOrder" ]
                            },
                            "then": {
                                "required": [ "stopBehaviourTowardsApplicant" ]
                            }
                        }
                    ]
                },
                "theHome": {
                    "type": "object",
                    "properties": {
                        "applyingForOccupationOrder": {
                            "type": "boolean"
                        },
                        "occupationOrderAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "currentlyLivesAtAddress": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/residentAtAddress"
                            }
                        },
                        "currentlyLivesAtAddressOther": {
                            "type": "string"
                        },
                        "previouslyLivedAtAddress": {
                            "$ref": "#/$defs/previousOrIntendedResidentAtAddress"
                        },
                        "intendedToLiveAtAddress": {
                            "$ref": "#/$defs/previousOrIntendedResidentAtAddress"
                        },
                        "childrenSharedResponsibility": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/childAtAddress"
                            }
                        },
                        "childrenApplicantResponsibility": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/childAtAddress"
                            }
                        },
                        "propertySpeciallyAdapted": {
                            "type": "boolean"
                        },
                        "propertySpeciallyAdaptedDetails": {
                            "type": "string"
                        },
                        "propertyHasMortgage": {
                            "type": "boolean"
                        },
                        "namedOnMortgage": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/contractName"
                            }
                        },
                        "namedOnMortgageOther": {
                            "type": "string"
                        },
                        "mortgageNumber": {
                            "type": "string"
                        },
                        "mortgageLenderName": {
                            "type": "string"
                        },
                        "mortgageLenderAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "propertyIsRented":  {
                            "type": "boolean"
                        },
                        "namedOnRentalAgreement": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/contractName"
                            }
                        },
                        "namedOnRentalAgreementOther": {
                            "type": "string"
                        },
                        "landlordName": {
                            "type": "string"
                        },
                        "landlordAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "haveHomeRights": {
                            "type": "boolean"
                        },
                        "wantToHappenWithLivingSituation": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/livingSituationOutcome"
                            }
                        },
                        "wantToHappenWithFamilyHome": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/familyHomeOutcome"
                            }
                        },
                        "anythingElseForCourtToConsider": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "applyingForOccupationOrder",
                        "propertySpeciallyAdapted",
                        "propertyHasMortgage",
                        "propertyIsRented",
                        "haveHomeRights"
                    ],
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "applyingForOccupationOrder": { "const": true }
                                },
                                "required": [ "applyingForOccupationOrder" ]
                            },
                            "then": {
                                "required": [
                                    "occupationOrderAddress",
                                    "currentlyLivesAtAddress",
                                    "wantToHappenWithLivingSituation"
                                ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "currentlyLivesAtAddress": {
                                        "contains": { "const": "other" }
                                    }
                                },
                                "required": [ "currentlyLivesAtAddress" ]
                            },
                            "then": {
                                "required": [ "currentlyLivesAtAddressOther" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "previouslyLivedAtAddress": { "const": "neither" }
                                },
                                "required": [ "previouslyLivedAtAddress" ]
                            },
                            "then": {
                                "required": [ "intendedToLiveAtAddress" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "propertySpeciallyAdapted": { "const": true }
                                },
                                "required": [ "propertySpeciallyAdapted" ]
                            },
                            "then": {
                                "required": [ "propertySpeciallyAdaptedDetails" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "propertyHasMortgage": { "const": true }
                                },
                                "required": [ "propertyHasMortgage" ]
                            },
                            "then": {
                                "required": [ "namedOnMortgage" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "namedOnMortgage": {
                                        "contains": {
                                            "const": "other"
                                        }
                                    }
                                },
                                "required": [ "namedOnMortgage" ]
                            },
                            "then": {
                                "required": [ "namedOnMortgageOther" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "propertyIsRented": { "const": true }
                                },
                                "required": [ "propertyIsRented" ]
                            },
                            "then": {
                                "required": [ "namedOnRentalAgreement" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "namedOnRentalAgreement": {
                                        "contains": {
                                            "const": "other"
                                        }
                                    }
                                },
                                "required": [ "namedOnRentalAgreement" ]
                            },
                            "then": {
                                "required": [ "namedOnRentalAgreementOther" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "propertyIsRented": { "const": true }
                                },
                                "required": [ "propertyIsRented" ]
                            },
                            "then": {
                                "required": [ "landlordName" ]
                            }
                        }
                    ],
                    "additionalProperties": false
                },
                "goingToCourt": {
                    "type": "object",
                    "properties": {
                        "isInterpreterRequired": {
                            "type": "boolean"
                        },
                        "interpreterLanguage": {
                            "type": "string"
                        },
                        "interpreterDialect": {
                            "type": "string"
                        },
                        "anyDisabilityNeeds": {
                            "type": "boolean"
                        },
                        "disabilityNeedsDetails": {
                            "type": "string"
                        },
                        "anySpecialMeasures": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/specialMeasures"
                            }
                        },
                        "courtSpecialRequirements": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "isInterpreterRequired",
                        "anyDisabilityNeeds"
                    ],
                    "additionalProperties": false,
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "isInterpreterRequired": { "const": true }
                                },
                                "required": [ "isInterpreterRequired" ]
                            },
                            "then": {
                                "required": [ "interpreterLanguage" ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "anyDisabilityNeeds": { "const": true }
                                },
                                "required": [ "anyDisabilityNeeds" ]
                            },
                            "then": {
                                "required": [ "disabilityNeedsDetails" ]
                            }
                        }
                    ]
                },
                "statementOfTruth": {
                    "type": "object",
                    "properties": {
                        "declaration": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/consentTypes"
                            }
                        },
