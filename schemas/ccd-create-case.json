{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "CCD Create FL401 Case: Version 0.9",
    "type": "object",
    "$defs": {
        "applicantAgeBracket": {
            "type": "string",
            "enum": [
                "eighteenOrOlder",
                "sixteenToEighteen",
                "underSixteen"
            ]
        },
        "applicationCover": {
            "type": "string",
            "enum": [
                "applicantOnly",
                "applicantAndChildren"
            ]
        },
        "behaviourTowardsApplicant": {
            "type": "string",
            "enum": [
                "beingViolentOrThreatening",
                "harrasingOrIntimidating",
                "publishingAboutApplicant",
                "contactingApplicant",
                "damagingPossessions",
                "damagingHome",
                "enteringHome",
                "comingNearHome",
                "comingNearWork",
                "seeDraftOrder"
            ]
        },
        "behaviourTowardsChildren": {
            "type": "string",
            "enum": [
                "beingViolentOrThreatening",
                "harrasingOrIntimidating",
                "publishingAboutChildren",
                "contactingDirectly",
                "goingNearSchoolNursery",
                "seeDraftOrder"
            ]
        },
        "childAtAddress": {
            "type": "object",
            "properties": {
                "fullName": {
                    "type": "string"
                },
                "age": {
                    "type": "integer"
                }
            },
            "required": [
                "fullName",
                "age"
            ]
        },
        "contractName": {
            "type": "string",
            "enum": [
                "applicant",
                "respondent",
                "other"
            ]
        },
        "courtProceeding": {
            "type": "object",
            "properties": {
                "nameOfCourt": {
                    "type": "string"
                },
                "caseNumber": {
                    "type": "string"
                },
                "caseType": {
                    "type": "string"
                },
                "caseDetails": {
                    "type": "string"
                }
            },
            "required": [
                "nameOfCourt",
                "caseNumber"
            ]
        },
        "familyHomeOutcome": {
            "type": "string",
            "enum": [
                "respondentToPayRepairsMaintenance",
                "respondentToPayRentMortgage",
                "useOfFurnitureOrContents"
            ]
        },
        "gender": {
            "type": "string",
            "enum": [
                "Male",
                "Female",
                "Non-binary",
                "Transgender",
                "other"
            ]
        },
        "livingSituationOutcome": {
            "type": "string",
            "enum": [
                "stayInHome",
                "returnToHome",
                "respondentNotEnterHome",
                "respondentAwayFromSurroundingArea",
                "respondentLimitInHome"
            ]
        },
        "orderType": {
            "type": "string",
            "enum": [
                "nonMolestationOrder",
                "occupationOrder"
            ]
        },
        "preferredContact": {
            "type": "string",
            "enum": [
                "phone",
                "email"
            ]
        },
        "previousOrIntendedResidentAtAddress": {
            "type": "string",
            "enum": [
                "applicantAndRespondent",
                "applicant",
                "respondent",
                "neither"
            ]
        },
        "protectedChild": {
            "type": "object",
            "properties": {
                "fullName": {
                    "type": "string"
                },
                "dateOfBirth": {
                    "$ref": "#/$defs/standardDate"
                },
                "relationship": {
                    "type": "string"
                },
                "parentalResponsibility": {
                    "type": "boolean"
                },
                "respondentRelationship": {
                    "type": "string"
                }
            },
            "required": [
                "fullName",
                "dateOfBirth",
                "relationship",
                "parentalResponsibility",
                "respondentRelationship"
            ]
        },
        "relationshipDescription": {
            "type": "string",
            "enum": [
                "marriedOrCivil",
                "formerlyMarriedOrCivil",
                "engagedOrProposed",
                "formerlyEngagedOrProposed",
                "liveTogetherCouple",
                "formerlyLiveTogetherCouple",
                "currentNotLiveTogether",
                "formerNotLiveTogether",
                "noneOfAbove"
            ]
        },
        "relationshipType": {
            "type": "string",
            "enum": [
                "father",
                "mother",
                "son",
                "daughter",
                "brother",
                "sister",
                "grandfather",
                "grandmother",
                "uncle",
                "aunt",
                "nephew",
                "niece",
                "cousin",
                "other"
            ]
        },
        "residentAtAddress": {
            "type": "string",
            "enum": [
                "applicant",
                "respondent",
                "children",
                "other"
            ]
        },
        "specialMeasures": {
            "type": "string",
            "enum": [
                "separateWaitingRoom",
                "seperateEntranceExit",
                "shieldedByScreen",
                "joinByvideoLink"
            ]
        },
        "standardDate": {
            "type": "object",
            "properties": {
                "day": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 31
                },
                "month": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 12
                },
                "year": {
                    "type": "number"
                }
            },
            "required": [
                "day",
                "month",
                "year"
            ]
        },
        "ukAddress": {
            "type": "object",
            "properties": {
                "addressUKLine1": {
                    "type": "string"
                },
                "addressUKLine2": {
                    "type": "string"
                },
                "addressUKLine3": {
                    "type": "string"
                },
                "postTown": {
                    "type": "string"
                },
                "postCode": {
                    "type": "string"
                },
                "county": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                }
            },
            "required": [
                "addressUKLine1",
                "postTown",
                "postCode"
            ]
        },
        "withoutNoticeReason": {
            "type": "string",
            "enum": [
                "riskOfSignificantHarm",
                "deterredFromPursuingApplication",
                "respondentDeliberatelyEvadingService"
            ]
        },
        "consentTypes": {
            "type": "string",
            "enum": [
                "applicantConfirm",
                "legalAidConfirm"
            ]
        },
        "singleSelectOther": {
            "type": "object",
            "properties": {
                "other": {
                    "type": "string"
                }
            },
            "if": {
                "properties": {
                    "value": {
                        "const": "other"
                    }
                },
                "required": [
                    "value"
                ]
            },
            "then": {
                "required": [
                    "other"
                ]
            }
        },
        "multiSelectOther": {
            "type": "object",
            "properties": {
                "other": {
                    "type": "string"
                }
            },
            "if": {
                "properties": {
                    "value": {
                        "contains": {
                            "const": "other"
                        }
                    }
                },
                "required": [
                    "value"
                ]
            },
            "then": {
                "required": [
                    "other"
                ]
            }
        }
    },
    "properties": {
        "metaData": {
            "type": "object",
            "properties": {
                "caseOrigin": {
                    "type": "string"
                },
                "courtNavApproved": {
                    "type": "boolean"
                },
                "exParte": {
                    "type": "boolean"
                }
            },
            "required": [
                "caseOrigin"
            ]
        },
        "fl401": {
            "type": "object",
            "properties": {
                "beforeStart": {
                    "type": "object",
                    "properties": {
                        "applicantHowOld": {
                            "$ref": "#/$defs/applicantAgeBracket"
                        }
                    },
                    "required": [
                        "applicantHowOld"
                    ]
                },
                "situation": {
                    "type": "object",
                    "properties": {
                        "ordersAppliedFor": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "$ref": "#/$defs/orderType"
                            }
                        },
                        "ordersAppliedWithoutNotice": {
                            "type": "boolean"
                        },
                        "ordersAppliedWithoutNoticeReason": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "$ref": "#/$defs/withoutNoticeReason"
                            }
                        },
                        "ordersAppliedWithoutNoticeReasonDetails": {
                            "type": "string"
                        },
                        "bailConditionsOnRespondent": {
                            "type": "boolean"
                        },
                        "bailConditionsEndDate": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "additionalDetailsForCourt": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "ordersAppliedFor",
                        "ordersAppliedWithoutNotice",
                        "bailConditionsOnRespondent"
                    ],
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "ordersAppliedWithoutNotice": { "const": true }
                                },
                                "required": [ "ordersAppliedWithoutNotice" ]
                            },
                            "then": {
                                "required": [ "ordersAppliedWithoutNoticeReason" ]
                            }
                        }
                    ]
                },
                "applicantDetails": {
                    "type": "object",
                    "properties": {
                        "applicantFirstName": {
                            "type": "string"
                        },
                        "applicantLastName": {
                            "type": "string"
                        },
                        "applicantOtherNames": {
                            "type": "string"
                        },
                        "applicantGender": {
                            "type": "object",
                            "allOf": [{ "$ref": "#/$defs/multiSelectOther" }],
                            "properties": {
                                "value": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/$defs/gender"
                                    }
                                },
                                "other": {
                                    "type": "string"
                                }
                            }
                        },
                        "applicantDateOfBirth": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "shareContactDetailsWithRespondent": {
                            "type": "boolean"
                        },
                        "applicantAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "applicantPhoneNumber": {
                            "type": "string"
                        },
                        "applicantEmailAddress": {
                            "type": "string",
                            "format": "email"
                        },
                        "applicantPreferredContact": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "$ref": "#/$defs/preferredContact"
                            }
                        },
                        "applicantContactInstructions": {
                            "type": "string"
                        },
                        "applicantHasLegalRepresentative": {
                            "type": "boolean"
                        },
                        "legalRepresentativeFirstName": {
                            "type": "string"
                        },
                        "legalRepresentativeLastName": {
                            "type": "string"
                        },
                        "legalRepresentativeFirm": {
                            "type": "string"
                        },
                        "legalRepresentativeAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "legalRepresentativeDx": {
                            "type": "string"
                        },
                        "legalRepresentativePhone": {
                            "type": "string"
                        },
                        "legalRepresentativeEmail": {
                            "type": "string",
                            "format": "email"
                        },
                        "legalRepresentativeReference": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "applicantFirstName",
                        "applicantLastName",
                        "applicantDateOfBirth",
                        "shareContactDetailsWithRespondent",
                        "applicantAddress",
                        "applicantHasLegalRepresentative"
                    ]
                },
                "respondentDetails": {
                    "type": "object",
                    "properties": {
                        "respondentFirstName": {
                            "type": "string"
                        },
                        "respondentLastName": {
                            "type": "string"
                        },
                        "respondentOtherNames": {
                            "type": "string"
                        },
                        "respondentDateOfBirth": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "respondentLivesWithApplicant": {
                            "type": "boolean"
                        },
                        "respondentAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "respondentPhoneNumber": {
                            "type": "string"
                        },
                        "respondentEmailAddress": {
                            "type": "string",
                            "format": "email"
                        }
                    },
                    "required": [
                        "respondentFirstName",
                        "respondentLastName",
                        "respondentLivesWithApplicant",
                        "respondentAddress"
                    ]
                },
                "relationshipWithRespondent": {
                    "type": "object",
                    "properties": {
                        "relationshipDescription": {
                            "type": "array",
                            "minItems": 1,
                            "items": {
                                "$ref": "#/$defs/relationshipDescription"
                            }
                        },
                        "relationshipStartDate": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "relationshipEndDate": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "ceremonyDate": {
                            "$ref": "#/$defs/standardDate"
                        },
                        "respondentsRelationshipToApplicant": {
                            "type": "object",
                            "allOf": [{ "$ref": "#/$defs/singleSelectOther" }],
                            "properties": {
                                "value": {
                                    "$ref": "#/$defs/relationshipType"
                                }
                            }
                        },
                        "anyChildren": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "relationshipDescription",
                        "anyChildren"
                    ]
                },
                "family": {
                    "type": "object",
                    "properties": {
                        "whoApplicationIsFor": {
                            "$ref": "#/$defs/applicationCover"
                        },
                        "protectedChildren": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/protectedChild"
                            }
                        },
                        "anyOngoingCourtProceedings": {
                            "type": "boolean"
                        },
                        "ongoingCourtProceedings": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/courtProceeding"
                            }
                        }
                    },
                    "required": [
                        "whoApplicationIsFor",
                        "anyOngoingCourtProceedings"
                    ]
                },
                "respondentBehaviour": {
                    "type": "object",
                    "properties": {
                        "applyingForMonMolestationOrder": {
                            "type": "boolean"
                        },
                        "stopBehaviourTowardsApplicant": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/behaviourTowardsApplicant"
                            }
                        },
                        "stopBehaviourTowardsChildren": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/behaviourTowardsChildren"
                            }
                        },
                        "stopBehaviourAnythingElse": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "applyingForMonMolestationOrder"
                    ]
                },
                "theHome": {
                    "type": "object",
                    "properties": {
                        "applyingForOccupationOrder": {
                            "type": "boolean"
                        },
                        "occupationOrderAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "currentlyLivesAtAddress": {
                            "type": "object",
                            "allOf": [{ "$ref": "#/$defs/multiSelectOther" }],
                            "properties": {
                                "value": {
                                    "type": "array",
                                    "iteme": {
                                        "$ref": "#/$defs/residentAtAddress"
                                    }
                                }
                            }
                        },
                        "previouslyLivedAtAddress": {
                            "$ref": "#/$defs/previousOrIntendedResidentAtAddress"
                        },
                        "intendedToLiveAtAddress": {
                            "$ref": "#/$defs/previousOrIntendedResidentAtAddress"
                        },
                        "childrenSharedResponsibility": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/childAtAddress"
                            }
                        },
                        "childrenApplicantResponsibility": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/childAtAddress"
                            }
                        },
                        "propertySpeciallyAdapted": {
                            "type": "boolean"
                        },
                        "propertySpeciallyAdaptedDetails": {
                            "type": "string"
                        },
                        "propertyHasMortgage": {
                            "type": "boolean"
                        },
                        "namedOnMortgage": {
                            "type": "object",
                            "allOf": [{ "$ref": "#/$defs/multiSelectOther" }],
                            "properties": {
                                "value": {
                                    "type": "array",
                                    "iteme": {
                                        "$ref": "#/$defs/contractName"
                                    }
                                }
                            }
                        },
                        "mortgageNumber": {
                            "type": "string"
                        },
                        "mortgageLenderName": {
                            "type": "string"
                        },
                        "mortgageLenderAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "propertyIsRented":  {
                            "type": "boolean"
                        },
                        "namedOnRentalAgreement": {
                            "type": "object",
                            "allOf": [{ "$ref": "#/$defs/multiSelectOther" }],
                            "properties": {
                                "value": {
                                    "type": "array",
                                    "iteme": {
                                        "$ref": "#/$defs/contractName"
                                    }
                                }
                            }
                        },
                        "landlordName": {
                            "type": "string"
                        },
                        "landlordAddress": {
                            "$ref": "#/$defs/ukAddress"
                        },
                        "haveHomeRights": {
                            "type": "boolean"
                        },
                        "wantToHappenWithLivingSituation": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/livingSituationOutcome"
                            }
                        },
                        "wantToHappenWithFamilyHome": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/familyHomeOutcome"
                            }
                        },
                        "anythingElseForCourtToConsider": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "applyingForOccupationOrder",
                        "propertySpeciallyAdapted",
                        "propertyHasMortgage",
                        "propertyIsRented",
                        "haveHomeRights"
                    ]
                },
                "goingToCourt": {
                    "type": "object",
                    "properties": {
                        "isInterpreterRequired": {
                            "type": "boolean"
                        },
                        "interpreterLanguage": {
                            "type": "string"
                        },
                        "interpreterDialect": {
                            "type": "string"
                        },
                        "anyDisabilityNeeds": {
                            "type": "boolean"
                        },
                        "disabilityNeedsDetails": {
                            "type": "string"
                        },
                        "anySpecialMeasures": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/specialMeasures"
                            }
                        },
                        "courtSpecialRequirements": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "isInterpreterRequired",
                        "anyDisabilityNeeds"
                    ],
                    "if": {
                        "properties": {
                            "anyDisabilityNeeds": { "const": true }
                        },
                        "required": [ "anyDisabilityNeeds" ]
                    },
                    "then": {
                        "required": [ "disabilityNeedsDetails" ]
                    }
                },
                "statementOfTruth": {
                    "type": "object",
                    "properties": {
                        "declaration": {
                            "type": "array",
                            "items": {
                                "$ref": "#/$defs/consentTypes"
                            }
                        },
                        "signature": {
                            "type": "string"
                        },
                        "signatureDate": {
                            "$ref": "#/$defs/standardDate"
                        }
                    },
                    "required": [
                        "declaration",
                        "signature",
                        "signatureDate"
                    ]
                }
            },
            "required": [
                "beforeStart",
                "situation",
                "applicantDetails",
                "respondentDetails",
                "relationshipWithRespondent",
                "family",
                "respondentBehaviour",
                "theHome",
                "goingToCourt",
                "statementOfTruth"
            ]
        }
    },
    "required": [
        "metaData",
        "fl401"
    ]
}
