{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "FL401 Data Schema: Version 1.0",
    "type": "object",
    "definitions": {
        "applicantAgeBrackets": {
            "type": "string",
            "enum": [
                "eighteenOrOlder",
                "sixteenToEighteen",
                "underSixteen"
            ]
        },
        "orderTypes": {
            "type": "string",
            "enum": [
                "nonMolestationOrder",
                "occupationOrder"
            ]
        },
        "withoutNoticeReasons": {
            "type": "string",
            "enum": [
                "riskOfSignificantHarm",
                "deterredFromPursuingApplication",
                "respondentDeliberatelyEvadingService"
            ]
        },
        "preferredContact": {
            "type": "string",
            "enum": [
                "phone",
                "email"
            ]
        },
        "ukAddress": {
            "type": "object",
            "properties": {
                "addressUKLine1": { "type": "string" },
                "addressUKLine2": { "type": "string" },
                "addressUKLine3": { "type": "string" },
                "postTown": { "type": "string" },
                "postCode": { "type": "string" },
                "county": { "type": "string" },
                "country": { "type": "string" }
            },
            "required": [
                "addressUKLine1",
                "postTown",
                "postCode"
            ]
        },
        "protectedChild": {
            "type": "object",
            "properties": {
                "fullName": { "type": "string"},
                "dateOfBirth": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Use Iso8601 format (e.g. 1975-12-25T00:00:00-0000)"
                },
                "relationship": { "type": "string"},
                "parentalResponsibility": { "type": "bool"},
                "respondentRelationship": { "type": "string"}
            },
            "required": [
                "fullName",
                "dateOfBirth",
                "relationship",
                "parentalResponsibility",
                "respondentRelationship"
            ]
        },
        "courtProceedings": {
            "type": "object",
            "properties": {
                "nameOfCourt": { "type": "string"},
                "caseNumber": { "type": "string"}
            },
            "required": [
                "nameOfCourt",
                "caseNumber"
            ]
        },
        "childAtAddress": {
            "type": "object",
            "properties": {
                "fullName": { "type": "string"},
                "age": { "type": "integer" }
            },
            "required": [
                "fullName",
                "age"
            ]
        }
    },
    "properties": {
        "beforeStart": {
            "type": "object",
            "properties": {
                "applicantHowOld": {
                    "$ref": "#/definitions/applicantAgeBrackets"
                }
            },
            "required": [
                "applicantHowOld"
            ]
        },
        "situation": {
            "type": "object",
            "properties": {
                "ordersAppliedFor": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/orderTypes"
                    }
                },
                "ordersAppliedWithoutNotice": {
                    "type": "boolean"
                },
                "ordersAppliedWithoutNoticeReason": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/withoutNoticeReasons"
                    }
                },
                "bailConditionsOnRespondent": {
                    "type": "boolean"
                },
                "bailConditionsEndDate": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Use Iso8601 format (e.g. 1975-12-25T00:00:00-0000)"
                },
                "additionalDetailsForCourt": {
                    "type": "string"
                }
            },
            "required": [
                "ordersAppliedFor"
            ],
            "dependentRequired": {
                "ordersAppliedWithoutNotice": ["ordersAppliedWithoutNoticeReason"],
                "bailConditionsOnRespondent": ["bailConditionsEndDate"]
            }
        },
        "applicantDetails": {
            "type": "object",
            "properties": {
                "applicantFirstName": {
                    "type": "string"
                },
                "applicantLastName": {
                    "type": "string"
                },
                "applicantOtherNames": {
                    "type": "string"
                },
                "applicantDateOfBirth": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Use Iso8601 format (e.g. 1975-12-25T00:00:00-0000)"
                },
                "shareContactDetailsWithRespondent": {
                    "type": "boolean"
                },
                "applicantAddress": {
                    "$ref": "#/definitions/ukAddress"
                },
                "applicantPhoneNumber": {
                    "type": "string"
                },
                "applicantEmailAddress": {
                    "type": "string"
                },
                "applicantPreferredContact": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/preferredContact"
                    }
                },
                "contactInstructions": {
                    "type": "string"
                },
                "hasLegalRepresentative": {
                    "type": "boolean"
                },
                "legalRepresentativeName": {
                    "type": "string"
                },
                "legalRepresentativeFirm": {
                    "type": "string"
                },
                "legalRepresentativeAddress": {
                    "$ref": "#/definitions/ukAddress"
                },
                "legalRepresentativeDx": {
                    "type": "string"
                },
                "legalRepresentativePhone": {
                    "type": "string"
                },
                "legalRepresentativeEmail": {
                    "type": "string"
                },
                "legalRepresentativeReference": {
                    "type": "string"
                }
            },
            "required": [
                "applicantFirstName",
                "applicantLastName",
                "applicantDateOfBirth",
                "shareContactDetailsWithRespondent",
                "applicantAddress",
                "hasLegalRepresentative"
            ]
        }
    }
}